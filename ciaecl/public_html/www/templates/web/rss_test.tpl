<br />"</span><span style="color: #007700">;
<br />&nbsp;&nbsp;
<br />&nbsp;&nbsp;if&nbsp;(</span><span style="color: #0000BB">mail</span><span style="color: #007700">(</span><span style="color: #0000BB">$mail</span><span style="color: #007700">,&nbsp;</span><span style="color: #0000BB">$emaila</span><span style="color: #007700">,&nbsp;</span><span style="color: #DD0000">"Recomendaci&oacute;n&nbsp;Sitio"</span><span style="color: #007700">,&nbsp;</span><span style="color: #0000BB">$message</span><span style="color: #007700">,&nbsp;</span><span style="color: #0000BB">$headers</span><span style="color: #007700">))&nbsp;
